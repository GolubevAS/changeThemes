<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChangeThemes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyCoolStyle" parent="Theme.ChangeThemes">
        <item name="android:textSize">40sp</item>
        <item name="android:background">#4CAF50</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyPinkStyle" parent="Theme.MaterialComponents">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#E91E63</item>
        <item name="android:colorPrimary">#e91e63</item>
        <item name="android:colorPrimaryDark">#b0003a</item>
        <item name="android:colorAccent">#ff6090</item>
    </style>

    <style name="MyDarkStyle" parent="Theme.MaterialComponents">
        <item name="android:textSize">25sp</item>
        <item name="android:background">#735959</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorPrimary">#5C5155</item>
        <item name="android:colorPrimaryDark">#131313</item>
        <item name="android:colorAccent">#8BC34A</item>
    </style>
</resources>